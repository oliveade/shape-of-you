{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center">
        <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-lg">
            <h2 class="text-2xl font-semibold text-center text-gray-700">Mot de passe oublié</h2>
            <form method="post" class="mt-6">
                {% if error %}
                    <div class="bg-red-400 text-white rounded-lg mb-4 p-2 font-medium text-center">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                        Please try again.
                    </div>
                {% endif %}

                <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="email" id="email" name="email" required
                           class="w-full mt-1 px-4 py-2 border rounded-lg focus:ring focus:ring-rose-300 focus:outline-none"/>
                </div>
                <button type="submit" class="w-full bg-rose-400 text-white mt-4 py-2 px-4 rounded-lg hover:bg-rose-500 transition">
                    Réinitialiser le mot de passe
                </button>

            </form>
        </div>
    </div>
{% endblock %}
