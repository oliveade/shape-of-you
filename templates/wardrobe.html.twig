{% extends 'base.html.twig'%}
{% block title %} Ma garde Robe {% endblock %}
{% block body %}

<div class="container mx-auto mt-6 p-4 bg-white shadow-lg rounded-lg">
    <h2 class="text-xl font-semibold text-gray-700 mb-4">Mes vêtements</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {% for garment in garments %}
            <div class="bg-white border rounded-lg overflow-hidden shadow hover:shadow-lg transition">
                <img 
                    src="{{ asset('uploads/' ~ garment.imageUrl) }}" 
                    alt="{{ garment.style }}" 
                    class="w-full h-48 object-cover"
                >
                <div class="p-4">
                    <h3 class="text-lg font-bold text-gray-800">{{ garment.style }}</h3>
                    <p class="text-gray-600 text-sm mt-1">{{ garment.description }}</p>
                </div>
            </div>
        {% else %}
            <p class="col-span-full text-center text-gray-500">Aucun vêtement trouvé.</p>
        {% endfor %}
    </div>

</div>
{%endblock%}
